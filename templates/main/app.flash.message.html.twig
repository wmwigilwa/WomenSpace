{% for msg in app.flashes('info') %}
    <div id="dismiss-alert" class="bg-blue-50 border border-blue-200 rounded-md p-4 mb-5" role="alert">
        <div class="flex">
            <div class="flex-shrink-0">
                <i class="fa-solid fa-circle-info text-blue-800"></i>
            </div>
            <div class="ml-4">
                <h3 class="text-sm text-blue-800 font-semibold">
                    Information !
                </h3>
                <div class="mt-1 text-sm text-blue-700">
                    {{ msg }}
                </div>
            </div>
            <div class="pl-3 ml-auto">
                <div class="-mx-1.5 -my-1.5">
                    <button type="button" class="inline-flex bg-blue-50 rounded-md p-1.5 text-blue-500 hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-blue-50 focus:ring-blue-600" data-hs-remove-element="#dismiss-alert">
                        <span class="sr-only">Dismiss</span>
                        <i class="fa-solid fa-xmark"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endfor %}

