<div class="flex flex-col gap-y-4 gap-x-0 mt-5 md:flex-row md:items-center md:justify-end md:gap-y-0 md:gap-x-7 md:mt-0 md:ps-7">
    {% if app.user %}
        <a class="font-medium {% if app.request.pathinfo == path('app_quiz_home') %}text-blue-600 {% else %} text-white {% endif%} md:py-6" href="{{ path('app_quiz_home') }}" aria-current="page">Choose a Quest</a>
        <a class="font-medium {% if app.request.pathinfo == path('app_view_leaderboards') %}text-blue-600 {% else %} text-white {% endif%} hover:text-gray-400 md:py-6" href="{{ path('app_view_leaderboards')}}">Leaderboards</a>
        <a href="{{ path('app_logout') }}" class="py-2 lg:px-4 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg lg:border lg:border-white text-white lg:hover:bg-white hover:text-gray-500">
            Logout
        </a>
    {% else %}
        <a class="font-medium text-blue-600 md:py-6 dark:text-blue-500" href="#" aria-current="page">Home</a>
        <a class="font-medium text-white hover:text-gray-400 md:py-6 dark:text-gray-400" href="#features">Forums</a>
        <a class="font-medium text-white hover:text-gray-400 md:py-6 dark:text-gray-400" href="{{ path('app_login') }}">Login</a>

        <a href="{{ path('app_sign_up') }}" class="py-2 lg:px-4 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg lg:border lg:border-white text-white lg:hover:bg-white hover:text-gray-500">
            Sign up
        </a>
    {% endif %}
</div>